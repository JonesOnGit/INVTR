  <div id="inviter">
  	<%= render 'details', invite: @invite %>
  </div>
  <div class="margin-top row">
    <div class="medium-12 columns">
      <div id="buttons">
        <span class="addtocalendar button add-to-calendar">
            <var class="atc_event">
                <var class="atc_date_start"><%= @invite.start_date %></var>
                <var class="atc_date_end"><%= @invite.end_date %></var>
                <var class="atc_timezone"><%= @invite.timezone %></var>
                <var class="atc_title"><%= @invite.name %></var>
                <var class="atc_description"><%= @invite.description %></var>
                <var class="atc_location"><%= @invite.address %></var>
            </var>
        </span>
      </div>
    </div>
  </div>
  <%= link_to @invite.id, :controller => 'invites', :action => :show, :format => :ics %>

