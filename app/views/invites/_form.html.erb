<%= simple_form_for invite, url: url do |f| %>
 <div class="margin-top row">
   <div class="medium-12 columns">
     <%= f.input :name %>
   </div>
 </div>

 <div class="margin-top row">
   <div class="medium-2 columns">
     <%= f.input :start_date, as: :datetime, ampm: true %>
   </div>
   <div class="medium-2 columns">
     <%= f.input :end_date, as: :datetime, ampm: true %>
   </div>
 </div>

  <div class="row">
   <div class="medium-12 columns">
     <%= f.input :description %>
   </div>
 </div>

  <div class="row">
   <div class="medium-12 columns">
     <%= f.input :address, html: { id: "pac-input" } %>
   </div>
 </div>

 <div class="margin-top row">
   <div class="medium-12 columns">
     <%= f.input :allow_others, as: :boolean %>
   </div>
 </div>

 <div class="row">
   <div class="large-12 columns">
     <a href="<%= @login_url %>" id="hotmailLogin">Sign in to outlook</a>

      <a href="<%= @google_login %>" id="googleLogin">Sign in to google</a>

      <a href="#" data-reveal-id="myModal">Click Me For A Modal</a>
      <div id="myModal" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
        <h2 id="modalTitle">INVTR</h2>
        Emails: <input type="text" name="emails" id="emails"><br>
        My Email: <input type="text" name="myEmail" id="my-email"><br>
        <a class='button' id='send-emails-button'>Finish</a>
        <a class="close-reveal-modal" aria-label="Close">&#215;</a>
      </div>
   </div>
 </div>   

 <div class="margin-top row">
   <div class="medium-12 columns">
     <%= f.input :avatar, as: :file %>
   </div>
 </div>

 <div class="row">
   <div class="large-12 columns">
     <%= f.button :submit %>
   </div>
 </div>
 <div class="row">
   <div class="large-12 columns">
     By clicking "Submit" you are agreeing to our <a href="/terms-of-service">terms of service</a> and our <a href="/privacy-policy">privacy policy</a>.
   </div>
 </div>

 <script>
    $("#send-emails-button").click(function() {
      var emailsString = $("#emails").val();
      var emails = emailsString.replace(/,/g, '');
      document.cookie = "invited=" + emails;
      document.cookie = "oauth_provider=none"
      document.cookie = "ownerEmail=" + $("#my-email").val();
      $('#myModal').foundation('reveal', 'close');
    });
 </script>

