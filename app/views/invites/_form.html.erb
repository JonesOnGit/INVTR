<%= simple_form_for invite, url: url do |f| %>
 <div class="margin-top row">
   <div class="medium-12 columns">
     <%= f.input :name %>
   </div>
 </div>

 <div class="margin-top row">
   <div class="medium-2 columns">
     <%= f.input :start_date, as: :datetime %>
   </div>
   <div class="medium-2 columns">
     <%= f.input :end_date, as: :datetime %>
   </div>
 </div>

  <div class="row">
   <div class="medium-12 columns">
     <%= f.input :description %>
   </div>
 </div>

  <div class="row">
   <div class="medium-12 columns">
     <%= f.input :address, html: { id: "pac-input" } %>
   </div>
 </div>

 <div class="margin-top row">
   <div class="medium-12 columns">
     <%= f.input :allow_others, as: :boolean %>
   </div>
 </div>

 <div class="row">
   <div class="large-12 columns">
     <button onclick="auth();" data-reveal-id="myModal">Add Guests From Gmail Account</button>
     <div id="myModal" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
     <a class="close-reveal-modal" aria-label="Close">&#215;</a>
     </div>
   </div>
 </div>   

 <div class="row">
   <div class="large-12 columns">
     <%= f.button :submit %>
   </div>
 </div>

<% end %>

